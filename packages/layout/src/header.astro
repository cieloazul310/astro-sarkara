---
import { ColorModeButton, Link } from "@cieloazul310/astro-sarkara-components";
import { css } from "styled-system/css";

export interface Props {
  className?: string;
  siteTitle: string;
}

const { siteTitle, className } = Astro.props;
---

<header class={className}>
  <slot>
    <Link
      href="/"
      className={css({
        color: "white",
        _hover: {
          color: "primary.200",
          textDecoration: "none",
        },
      })}
    >
      <h1 class={css({ fontSize: "xl", textStyle: "headings" })}>
        {siteTitle}
      </h1>
    </Link>
    <div class={css({ flexGrow: 1, hideBelow: "sm" })}></div>
    <div class={css({ hideBelow: "sm" })}>
      <ColorModeButton />
    </div>
  </slot>
</header>
