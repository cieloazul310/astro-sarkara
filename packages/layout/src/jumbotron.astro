---
import { css } from "styled-system/css";
import { hstack, gradientBox, container } from "styled-system/patterns";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<header
  class={gradientBox({
    p: [4, 8],
    height: "480px",
    display: "flex",
    alignItems: "center",
    justifyContent: "center",
    color: "white",
  })}
>
  <div
    class={container({
      maxWidth: "contentMaxWidth",
      display: "flex",
      flexDirection: "column",
    })}
  >
    {
      Astro.slots.has("jumbotron-header") && (
        <p class={hstack({ gap: 2, fontSize: ["md", "lg"] })}>
          <slot name="jumbotron-header" />
        </p>
      )
    }
    <h1
      class={css({
        textStyle: "headings",
        fontSize: ["2xl", "4xl", "4xl", "5xl"],
      })}
    >
      {title}
    </h1>
    {
      Astro.slots.has("jumbotron-footer") && (
        <p
          class={hstack({ gap: 2, fontSize: ["md", "lg"], fontWeight: "bold" })}
        >
          <slot name="jumbotron-footer" />
        </p>
      )
    }
  </div>
</header>
