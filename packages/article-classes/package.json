{
  "name": "@cieloazul310/astro-sarkara-article-classes",
  "description": "Panda CSS classes package for astro-sarkara.",
  "version": "4.0.0-next.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "astro",
    "pandacss"
  ],
  "author": {
    "name": "cieloazul310",
    "email": "cieloazul310@gmail.com",
    "url": "https://cieloazul310.github.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cieloazul310/astro-sarkara.git",
    "directory": "packages/article-classes"
  },
  "scripts": {
    "tsup": "tsup",
    "codegen": "panda --clean",
    "_dev": "npm-run-all --parallel dev:panda dev:components",
    "_dev:panda": "panda --watch",
    "_dev:components": "npm run tsup -- --watch",
    "_build": "npm run codegen && npm run build:components",
    "_build:components": "npm run tsup -- --clean",
    "clean": "git clean -fx .turbo/ dist/"
  },
  "devDependencies": {
    "@cieloazul310/astro-sarkara-components": "^4.0.0-next.0",
    "@cieloazul310/astro-sarkara-utils": "^2.0.0-next.0",
    "@pandacss/dev": "^0.45.2",
    "@repo/eslint-config": "^1.0.0-next.0",
    "@repo/typescript-config": "^1.0.0-next.0",
    "@types/eslint": "^8.56.10",
    "astro": "^4.15.4",
    "eslint": "^8.57.0"
  },
  "peerDependencies": {
    "@cieloazul310/astro-sarkara-components": "^4.0.0-next.0",
    "@cieloazul310/astro-sarkara-utils": "^2.0.0-next.0",
    "@cieloazul310/panda-preset-sarkara-base": "^2.0.0-next.0",
    "astro": "^4.0.0"
  }
}