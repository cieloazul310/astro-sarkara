{
  "name": "@cieloazul310/astro-sarkara-components",
  "description": "Astro components package built with Panda CSS.",
  "version": "4.0.0",
  "license": "ISC",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./preset": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "src/index.ts",
    "src/astro/index.ts",
    "src/astro/*.astro",
    "dist"
  ],
  "keywords": [
    "astro",
    "pandacss"
  ],
  "author": {
    "name": "cieloazul310",
    "email": "cieloazul310@gmail.com",
    "url": "https://cieloazul310.github.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cieloazul310/astro-sarkara.git",
    "directory": "packages/components"
  },
  "scripts": {
    "tsup": "tsup",
    "codegen": "panda --clean",
    "dev": "npm-run-all --parallel dev:panda dev:preset",
    "dev:panda": "panda --watch",
    "dev:preset": "npm run tsup -- --watch",
    "build": "npm run codegen && npm run build:preset",
    "build:preset": "npm run tsup -- --clean",
    "check": "astro check",
    "clean": "git clean -fx .turbo/ styled-system/"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/ts-plugin": "^1.10.2",
    "@cieloazul310/astro-sarkara-utils": "^2.0.0",
    "@iconify-json/mdi": "^1.2.0",
    "@pandacss/dev": "^0.45.2",
    "@repo/eslint-config": "^1.0.0",
    "@repo/typescript-config": "^1.0.0",
    "@types/eslint": "^8.56.10",
    "astro": "^4.15.4",
    "astro-icon": "^1.1.0",
    "eslint": "^8.57.0"
  },
  "peerDependencies": {
    "@cieloazul310/astro-sarkara-utils": "^2.0.0",
    "@cieloazul310/panda-preset-sarkara-base": "^2.0.0",
    "@iconify-json/mdi": "^1.0.0",
    "astro": "^4.0.0",
    "astro-icon": "^1.0.0"
  }
}