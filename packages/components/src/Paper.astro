---
import { cx, css } from "@cieloazul310/sarkara-css/css";
import { paper } from "@cieloazul310/sarkara-css/patterns";
// import type { PropertyTypes } from "@cieloazul310/sarkara-css/types/prop-type";

export interface Props {
  className?: string;
  colorPalette?: string;
  // colorPalette?: PropertyTypes["colorPalette"];
}

const { className, colorPalette = "primary" } = Astro.props;
---

<div class={cx(css({ colorPalette }), paper(), className)}>
  <slot />
</div>
