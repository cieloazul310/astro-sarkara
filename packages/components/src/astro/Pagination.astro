---
import * as path from "path";
import type { Page } from "astro";
import { getPagination } from "@cieloazul310/astro-sarkara-utils";
import { cva } from "@cieloazul310/sarkara-css/css";
import { flex } from "@cieloazul310/sarkara-css/patterns";
/** @todo recipes for astro problem */
// import { paginationButton } from "@cieloazul310/sarkara-css/recipes";
import PaperLink from "./PaperLink.astro";

const paginationButton = cva({
  base: {
    fontSize: ["sm", "md"],
  },
  variants: {
    display: {
      base: {},
      optional: {
        hideBelow: "sm",
      },
    },
  },
  defaultVariants: {
    display: "optional",
  },
});

export interface Props {
  page: Page;
  basePath: string;
}
const { page, basePath } = Astro.props;
const { currentPage, lastPage } = page;

const paginations = getPagination(currentPage, lastPage, { neighbors: 2 });
---

{
  lastPage > 1 && (
    <nav
      class={flex({
        maxWidth: "100%",
        overflowX: "auto",
        justifyContent: "center",
      })}
    >
      <div
        class={flex({
          px: 1,
          direction: "row",
          alignItems: "center",
          justifyContent: "center",
          width: "max-content",
          gap: 1,
        })}
      >
        {paginations.map(({ value, optional }) => (
          <PaperLink
            className={paginationButton({
              display: optional ? "optional" : "base",
            })}
            href={
              value === 1 ? basePath : path.join(basePath, value.toString())
            }
            selected={value === currentPage}
          >
            {value}
          </PaperLink>
        ))}
      </div>
    </nav>
  )
}
