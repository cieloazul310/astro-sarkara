---
import { Icon } from "astro-icon/components";
import { css, cx } from "styled-system/css";
import { hstack } from "styled-system/patterns";
---

<div
  class={hstack({
    color: "inherit",
    gap: 1,
    bg: { base: "bg", _dark: "bg.dark" },
    rounded: "xl",
    borderWidth: "1px",
    borderColor: { base: "gray.200", _dark: "gray.800" },
    shadow: "inner",
    fontSize: "2xl",
  })}
>
  <button
    class={cx(
      css({
        borderRadius: "50%",
        cursor: { base: "unset", _dark: "pointer" },
        color: { base: "orange.500", _dark: "gray.950" },
        _hover: {
          color: { base: "orange.500", _dark: "orange.800" },
        },
      }),
      "toggle-color-mode",
    )}
    aria-label="Light mode"
  >
    <Icon name="mdi:brightness-5" />
  </button>
  <button
    class={cx(
      css({
        borderRadius: "50%",
        cursor: { base: "pointer", _dark: "unset" },
        color: { base: "orange.100", _dark: "orange.300" },
        _hover: {
          color: { base: "orange.500", _dark: "orange.300" },
        },
      }),
      "toggle-color-mode",
    )}
    aria-label="Dark mode"
  >
    <Icon name="mdi:brightness-3" />
  </button>
</div>
