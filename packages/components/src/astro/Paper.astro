import type { HTMLTag, Polymorphic } from "astro/types";
import { cx, css } from "@cieloazul310/sarkara-css/css";
import { paper } from "@cieloazul310/sarkara-css/patterns";

export type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  className?: string;
  colorPalette?: string;
};

const {
  className,
  as: Tag = "div",
  colorPalette = "primary",
  ...props
} = Astro.props;
---

<Tag class={cx(css({ colorPalette }), paper(), className)} {...props}>
  <slot />
</Tag>
