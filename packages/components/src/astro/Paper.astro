import type { HTMLAttributes } from "astro/types";
import { cx, css } from "@cieloazul310/sarkara-css/css";
import { paper } from "@cieloazul310/sarkara-css/patterns";

export interface Props extends HTMLAttributes<"div"> {
  className?: string;
  colorPalette?: string;
}

const { className, colorPalette = "primary", ...props } = Astro.props;
---

<div class={cx(css({ colorPalette }), paper(), className)} {...props}>
  <slot />
</div>
