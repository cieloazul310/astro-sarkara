import type { HTMLTag, HTMLAttributes } from "astro/types";
import { cx, css } from "@cieloazul310/sarkara-css/css";
import { paper } from "@cieloazul310/sarkara-css/patterns";

export type Props<T extends HTMLTag = HTMLTag> = Omit<
  HTMLAttributes<T>,
  "slot"
> & {
  className?: string;
  colorPalette?: string;
  as?: T;
};

const {
  className,
  colorPalette = "primary",
  as: Tag = "div",
  ...props
} = Astro.props;
---

<Tag class={cx(css({ colorPalette }), paper(), className)} {...props}>
  <slot />
</Tag>
