---
import { Icon } from "astro-icon";
import type { HTMLAttributes } from "astro/types";
import { css, cx } from "@cieloazul310/sarkara-css/css";
import { paper } from "@cieloazul310/sarkara-css/patterns";
import { useLink, isInternal } from "@cieloazul310/astro-sarkara-utils";

export interface Props extends HTMLAttributes<"a"> {
  className?: string;
  disablePrefix?: boolean;
  colorPalette?: string;
  selected?: boolean;
}

const {
  className,
  href,
  disablePrefix,
  selected = false,
  colorPalette = "primary",
  ...attrs
} = Astro.props;
const link = useLink(href, { disablePrefix });
const external = !isInternal(href);
---

<a
  class={cx(
    css({ colorPalette }),
    paper({
      hover: true,
      display: "inline-flex",
      minHeight: "48px",
      fontWeight: "bold",
      justifyContent: "center",
      alignItems: "center",
      height: 10,
      gap: 1,
    }),
    className,
  )}
  role="button"
  data-selected={selected}
  {...link}
  {...attrs}
>
  <slot />
  {
    external && (
      <Icon
        class={css({ width: "1em", height: "1em" })}
        name="mdi:open-in-new"
      />
    )
  }
</a>
