---
import { css, cx } from "@cieloazul310/sarkara-css/css";

export interface Props {
  colorPalette: string;
}
const { colorPalette } = Astro.props;
---

<span
  class={cx(
    css({ colorPalette }),
    css({
      rounded: "md",
      px: 2,
      py: 1,
      fontWeight: "bolder",
      color: { base: "colorPalette.800", _dark: "colorPalette.100" },
      bg: { base: "colorPalette.100", _dark: "colorPalette.900" },
    }),
  )}
>
  <slot />
</span>
