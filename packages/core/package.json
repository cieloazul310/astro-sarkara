{
  "name": "@cieloazul310/astro-sarkara",
  "description": "Core package of astro-sarkara, including Astro components and layout built with Panda CSS.",
  "version": "2.2.0-next.1",
  "license": "ISC",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "require": "./dist/preset.cjs",
      "import": "./dist/preset.js"
    }
  },
  "files": [
    "src/index.ts",
    "dist"
  ],
  "keywords": [
    "astro",
    "pandacss"
  ],
  "author": {
    "name": "cieloazul310",
    "email": "cieloazul310@gmail.com",
    "url": "https://cieloazul310.github.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cieloazul310/astro-sarkara.git",
    "directory": "packages/core"
  },
  "scripts": {
    "tsup": "tsup",
    "dev": "npm run tsup -- --watch",
    "build": "npm run clean && npm run tsup",
    "clean": "git clean -fx .turbo/ dist/"
  },
  "dependencies": {
    "@cieloazul310/astro-sarkara-components": "^6.0.0-next.1",
    "@cieloazul310/astro-sarkara-layout": "^6.0.0-next.1",
    "@cieloazul310/astro-sarkara-utils": "^2.2.0-next.1",
    "@cieloazul310/panda-preset-sarkara-base": "^2.2.0-next.1"
  },
  "devDependencies": {
    "@pandacss/dev": "^1.8.1",
    "@repo/eslint-config": "^1.2.0-next.1",
    "@repo/typescript-config": "^1.2.0-next.1",
    "eslint": "^9.39.2"
  },
  "peerDependencies": {
    "@pandacss/dev": "^1.0.0",
    "astro": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}