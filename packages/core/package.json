{
  "name": "@cieloazul310/astro-sarkara",
  "description": "Core package of astro-sarkara, including Astro components and layout built with Panda CSS.",
  "version": "2.0.1",
  "license": "ISC",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "require": "./dist/preset.cjs",
      "import": "./dist/preset.js"
    }
  },
  "files": [
    "src/index.ts",
    "dist"
  ],
  "keywords": [
    "astro",
    "pandacss"
  ],
  "author": {
    "name": "cieloazul310",
    "email": "cieloazul310@gmail.com",
    "url": "https://cieloazul310.github.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cieloazul310/astro-sarkara.git",
    "directory": "packages/core"
  },
  "scripts": {
    "tsup": "tsup",
    "dev": "npm run tsup -- --watch",
    "build": "npm run clean && npm run tsup",
    "clean": "git clean -fx .turbo/ dist/"
  },
  "dependencies": {
    "@cieloazul310/astro-sarkara-components": "^4.0.1",
    "@cieloazul310/astro-sarkara-layout": "^4.0.1",
    "@cieloazul310/astro-sarkara-utils": "^2.0.1",
    "@cieloazul310/panda-preset-sarkara-base": "^2.0.1"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.45.2",
    "@repo/eslint-config": "^1.0.0",
    "@repo/typescript-config": "^1.0.0",
    "@types/eslint": "^8.56.10",
    "eslint": "^8.57.0"
  },
  "peerDependencies": {
    "@pandacss/dev": ">=0.40.0",
    "astro": "^4.0.0"
  }
}