{
  "name": "astro-sarkara",
  "private": true,
  "engines": {
    "node": ">=18",
    "npm": ">=10"
  },
  "workspaces": [
    "app/*",
    "packages/*"
  ],
  "scripts": {
    "turbo": "turbo",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:package": "turbo run build --filter='./packages/*'",
    "changeset": "changeset",
    "publish-packages": "npm run build:package && changeset version && changeset publish",
    "format": "prettier \"packages/**/src/**/*.{js,ts,cjs,mjs,astro}\" --write",
    "lint-staged": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.8.9",
    "eslint": "^8.51.0",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "{app,packages}/**/*.{js,cjs,mjs,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}